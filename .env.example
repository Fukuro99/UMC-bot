# UMC-bot Environment Variables Configuration
# Copy this file to .env for local development

# ======================
# Resonite Account Settings
# ======================
RESONITE_USERNAME=your_username@example.com
RESONITE_PASSWORD=your_password_here
RESONITE_TOTP=your_totp_code_if_needed

# ======================
# Bot Behavior Settings
# ======================
AUTO_ACCEPT_FRIEND_REQUESTS=true
AUTO_EXTEND_LOGIN=true
UPDATE_STATUS=true
READ_MESSAGES_ON_RECEIVE=true

# ======================
# Bot Identity
# ======================
VERSION_NAME=UMC-bot

# ======================
# Environment Settings
# ======================
NODE_ENV=development

# ======================
# Logging Settings
# ======================
LOG_TO_FILE=false
LOG_PATH=./
LOG_LEVEL=INFO

# ======================
# Performance Settings (Optional)
# ======================
# MAX_RECONNECT_ATTEMPTS=10
# CONNECTION_TIMEOUT=15000
# HEARTBEAT_INTERVAL=60000